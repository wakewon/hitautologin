{
  "manifest_version": 2,
  "name": "HIT 校园网站自动登录 2.0",
  "version": "1.3.1",
  "author": "Ricardo Zheng",
  "description": "在 HIT 站点自动填充/登录",
  "browser_specific_settings": {
    "gecko": {
      "id": "hit-autologin@ricardozheng.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "HIT 自动登录"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "help.html"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}